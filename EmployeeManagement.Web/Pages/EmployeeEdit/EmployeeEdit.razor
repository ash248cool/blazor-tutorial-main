@page "/employeeedit/{id}"

@inherits EmployeeEditBase

<EditForm Model="EmployeeEditModelObject" OnValidSubmit="HandleValidSubmission">
    <ObjectGraphDataAnnotationsValidator />
    <h3>Edit Employee</h3>
    <hr />
    <div class="form-group row">
        <label for="firstName" class="col-sm-2 col-form-label">
            First Name
        </label>
        <div class="col-sm-10">
            <InputText id="firstName" class="form-control" placeholder="First Name"
                       @bind-Value="EmployeeEditModelObject.FirstName"></InputText>
            <ValidationMessage For="@(() => EmployeeEditModelObject.FirstName)" />
        </div>
    </div>
    <div class="form-group row">
        <label for="lastname" class="col-sm-2 col-form-label">
            Last Name
        </label>
        <div class="col-sm-10">
            <InputText id="lastname" class="form-control" placeholder="Last Name"
                       @bind-Value="EmployeeEditModelObject.LastName"></InputText>
            <ValidationMessage For="@(() => EmployeeEditModelObject.LastName)" />
        </div>
    </div>
    <div class="form-group row">
        <label for="email" class="col-sm-2 col-form-label">
            Email Address
        </label>
        <div class="col-sm-10">
            <InputText id="email" class="form-control" placeholder="Email Address"
                       @bind-Value="EmployeeEditModelObject.Email"></InputText>
            <ValidationMessage For="@(() => EmployeeEditModelObject.Email)" />
        </div>
    </div>
    <div class="form-group row">
        <label for="confirmemail" class="col-sm-2 col-form-label">
            Confirm Email Address
        </label>
        <div class="col-sm-10">
            <InputText id="confirmemail" class="form-control" placeholder="Confirm Email Address"
                       @bind-Value="EmployeeEditModelObject.ConfirmEmail"></InputText>
            <ValidationMessage For="@(() => EmployeeEditModelObject.ConfirmEmail)" />
        </div>
    </div>
    <div class="form-group row">
        <label for="department" class="col-sm-2 col-form-label">
            Department
        </label>
        <div class="col-sm-10">
            <CustomInputSelect id="department" class="form-control"
                               @bind-Value="EmployeeEditModelObject.DepartmentId">
                @foreach (var dept in Departments)
                {
                    <option value="@dept.DepartmentId">@dept.DepartmentName</option>
                }
            </CustomInputSelect>
        </div>
    </div>
    <div class="form-group row">
        <label for="gender" class="col-sm-2 col-form-label">
            Gender
        </label>
        <div class="col-sm-10">
            <InputSelect id="gender" class="form-control"
                         @bind-Value="EmployeeEditModelObject.Gender">
                @foreach (var gender in Enum.GetValues(typeof(Gender)))
                {
                    <option value="@gender">@gender</option>
                }
            </InputSelect>
        </div>
    </div>
    <div class="form-group row">
        <label for="dob" class="col-sm-2 col-form-label">
            Date of Birth
        </label>
        <div class="col-sm-10">
            <InputDate id="dob" class="form-control"
                       @bind-Value="EmployeeEditModelObject.DateOfBirth">
            </InputDate>
        </div>
    </div>
    <div class="form-group row">
        <label for="departmentName" class="col-sm-2 col-form-label">
            Date of Birth
        </label>
        <div class="col-sm-10">
            <InputText id="departmentName" class="form-control"
                       @bind-Value="EmployeeEditModelObject.Department.DepartmentName">
            </InputText>
            <ValidationMessage For="@(() => EmployeeEditModelObject.Department.DepartmentName)" />
        </div>
    </div>
    <button type="submit">Save</button>
</EditForm>